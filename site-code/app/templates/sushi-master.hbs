<div class="container">
  <div class="row">
    <div class="col-lg-12 cv-header">
      <h1 class="page-header">Sushi Master</h1>
      {{#parallax-content speed=0.25 height=125}}
        <img src="/assets/img/strip.jpg">
      {{/parallax-content}}
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="choleric-vision-video">
        <iframe width="100%" src="https://www.youtube.com/embed/W6KQraml_-w" frameborder="1" allowfullscreen></iframe>
